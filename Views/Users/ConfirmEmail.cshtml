@model EmailConfirmModel

@{
    ViewData["Title"] = "Confirm Email";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 class="center">Confirm Email</h1>
@if (Model.EmailVerified == true)
{
    <div class="alert alert-success" role="alert">
        <p>Your email has been verified successfully.</p>
    </div>
    <a asp-controller="Users" asp-action="Signin" class="btn btn-primary justify-content-center">Sign in</a>
}
else
{
    if (Model.EmailSent)
    {
        <p>Email sent on your registered email id.</p>
    }

    else
    {
        <p>We have sent an email on your email id. Click on the link to Sign in.</p>
    }

    <form asp-controller="Users" asp-action="ConfirmEmail">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Email" />

        <p>Did not get any email of deleted by mistake?</p>
        <div class="form-group">
            <input type="submit" value="Resend confirmation email" class="btn btn-primary justify-content-center" />
        </div>
    </form>
}

