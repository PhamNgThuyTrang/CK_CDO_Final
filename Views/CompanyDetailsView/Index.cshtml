@model PagedList.Core.IPagedList<CK_CDO_Final.Entities.CompanyDetails>

@{
    ViewData["Title"] = "CompanyDetails";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Danh sách doanh nghiệp niêm yết</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="get">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" name="SearchString" value="@ViewData["Search"]" />
                    </div>
                    <button class="au-btn-filter" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-lg-2">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Ma"]">@Html.DisplayNameFor(model => model.First().MA)</a>
                        </th>
                        <th class="col-lg-3">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Ten"]">@Html.DisplayNameFor(model => model.First().TEN)</a>
                        </th>
                        <th class="col-lg-3">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Nganh"]">@Html.DisplayNameFor(model => model.First().NGANHNGHE)</a>
                        </th>
                        <th class="col-lg-2">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["San"]">@Html.DisplayNameFor(model => model.First().SAN)</a>
                        </th>
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.First().KLNY)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.MA)
                            </td>
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.TEN)
                            </td>
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.NGANHNGHE)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.SAN)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.KLNY)
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <pager class="pager-container" list="@Model" asp-action="Index" asp-controller="CompanyDetailsView" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>
