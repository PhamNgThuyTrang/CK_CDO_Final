@model IEnumerable<CK_CDO_Final.Entities.Index>

@{
    ViewData["Title"] = "INDEX";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Theo dõi chỉ số</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="post">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" id="searchString" name="searchString" value="@ViewData["Search"]" />
                    </div>
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="date" id="date" name="date" class="form-control" value="@ViewData["Date"]" />
                    </div>
                    <button class="btn btn-light" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-danger" id="clear" type="reset">
                        <i class="fa fa-eraser"></i>
                        Clear
                    </button>
                </form>
            </div>
            
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-lg-3">
                            <a asp-action="Index" asp-route-date="@ViewData["Date"]" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Ma"]">@Html.DisplayNameFor(model => model.CHISO)</a>
                        </th>
                        <th class="col-lg-2">
                            <a asp-action="Index" asp-route-date="@ViewData["Date"]" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Ngay"]">@Html.DisplayNameFor(model => model.NGAY)</a>
                        </th>
                        <th class="col-lg-1">
                            <a asp-action="Index" asp-route-date="@ViewData["Date"]" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Open"]">@Html.DisplayNameFor(model => model.MOCUA)</a>
                        </th>
                        <th class="col-lg-1">
                            @Html.DisplayNameFor(model => model.TRAN)
                        </th>
                        <th class="col-lg-1">
                            @Html.DisplayNameFor(model => model.SAN)
                        </th>
                        <th class="col-lg-2">
                            <a asp-action="Index" asp-route-date="@ViewData["Date"]" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Close"]">@Html.DisplayNameFor(model => model.DONGCUA)</a>
                        </th>
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.KHOILUONG)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.CHISO)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.NGAY)
                            </td>
                            <td class="col-lg-1">
                                @Html.DisplayFor(modelItem => item.MOCUA)
                            </td>
                            <td class="col-lg-1">
                                @Html.DisplayFor(modelItem => item.TRAN)
                            </td>
                            <td class="col-lg-1">
                                @Html.DisplayFor(modelItem => item.SAN)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.DONGCUA)
                            </td>
                            <td class="col-lg-2">
                                @item.KHOILUONG.ToString("n0")
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <partial name="_LayoutPage" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>

@section js
{
    <script>
        $(function () {
            $("#clear").click(function () {
                $("#date").attr("value", "");
                $("#searchString").attr("value", "");
                window.location.href="IndexView";
            });
        });
    </script>  

}