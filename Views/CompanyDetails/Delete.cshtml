                    @Html.DisplayNameFor(model => model.MA)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.MA)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.TEN)
