                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.KLNY)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.KLNY)
                </div>
            </div>

            <form asp-action="Delete">
                <div class="form-group card-footer">
                    <input type="hidden" asp-for="MA" />
