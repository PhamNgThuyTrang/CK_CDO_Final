@model CK_CDO_Final.Entities.CompanyDetails

@{
    ViewData["Title"] = "CompanyDetails - Edit";
    Layout = "_Layout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Cập nhật thông tin giá chứng khoán
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="MA" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="MA" class="form-control" readonly/>
                        <span asp-validation-for="MA" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="TEN" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="TEN" class="form-control" />
                        <span asp-validation-for="TEN" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="NGANHNGHE" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="NGANHNGHE" class="form-control" />
                        <span asp-validation-for="NGANHNGHE" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="SAN" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="SAN" class="form-control" />
                        <span asp-validation-for="SAN" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="KLNY" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="KLNY" class="form-control" />
                        <span asp-validation-for="KLNY" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group card-footer">
                    <input type="submit" value="Save" class="btn btn-primary col-2" />
                    <input type="reset" value="Reset" class="btn btn-danger col-2" />
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>