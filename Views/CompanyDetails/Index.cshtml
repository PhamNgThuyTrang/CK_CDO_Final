@model IEnumerable<CK_CDO_Final.Entities.CompanyDetails>

@{
    ViewData["Title"] = "HNX";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Quản lý doanh nghiệp niêm yết</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="post">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" name="SearchString" value="@ViewData["Search"]" />
                    </div>
                    <button class="btn btn-light" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-danger" id="clear" type="reset">
                        <i class="fa fa-eraser"></i>
                        Clear
                    </button>
                </form>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-lg-1">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Ma"]">@Html.DisplayNameFor(model => model.MA)</a>
                        </th>
                        <th class="col-lg-3">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Ten"]">@Html.DisplayNameFor(model => model.TEN)</a>
                        </th>
                        <th class="col-lg-3">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["Nganh"]">@Html.DisplayNameFor(model => model.NGANHNGHE)</a>
                        </th>
                        <th class="col-lg-1">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["San"]">@Html.DisplayNameFor(model => model.SAN)</a>
                        </th>
                        <th class="col-lg-2">
                            <a asp-action="Index" asp-route-searchString="@ViewData["Search"]" asp-route-sortOrder="@ViewData["KLNY"]">@Html.DisplayNameFor(model => model.KLNY)</a> 
                        </th>
                        <th class="col-lg-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-lg-1">
                                @Html.DisplayFor(modelItem => item.MA)
                            </td>
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.TEN)
                            </td>
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.NGANHNGHE)
                            </td>
                            <td class="col-lg-1">
                                @item.SAN.ToUpper()
                            </td>
                            <td class="col-lg-2">
                                @item.KLNY.ToString("n0")
                            </td>
                            <td class="col-lg-2">
                                <div class="table-data-feature">
                                    <a class="item" asp-action="Edit" asp-route-id="@item.MA" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.MA" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.MA" data-toggle="tooltip" data-placement="top" title="More">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <partial name="_LayoutPage" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>
@section js
{
    <script>
        $(function () {
            $("#clear").click(function () {
                $("#searchString").attr("value", "");
                window.location.href = "CompanyDetails";
            });
        });
    </script>

}