@model PagedList.Core.IPagedList<CK_CDO_Final.Entities.CompanyDetails>

@{
    ViewData["Title"] = "HNX";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Danh sách doanh nghiệp niêm yết</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="get">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" name="SearchString" value="@ViewData["Search"]" />
                    </div>
                    <button class="au-btn-filter" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.First().MA)
                        </th>
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.First().TEN)
                        </th>
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.First().NGANHNGHE)
                        </th>
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.First().SAN)
                        </th>
                        <th class="col-lg-2">
                            @Html.DisplayNameFor(model => model.First().KLNY)
                        </th>
                        <th class="col-lg-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.MA)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.TEN)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.NGANHNGHE)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.SAN)
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.KLNY)
                            </td>
                            <td class="col-lg-2">
                                <div class="table-data-feature">
                                    <a class="item" asp-action="Edit" asp-route-id="@item.MA" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.MA" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.MA" data-toggle="tooltip" data-placement="top" title="More">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <pager class="pager-container" list="@Model" asp-action="Index" asp-controller="CompanyDetails" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>
